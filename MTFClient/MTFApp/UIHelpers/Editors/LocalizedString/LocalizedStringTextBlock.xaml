<localizedString:LocalizedStringTextBlockBase x:Class="MTFApp.UIHelpers.Editors.LocalizedString.LocalizedStringTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:localizedString="clr-namespace:MTFApp.UIHelpers.Editors.LocalizedString"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TextBlock Name="Root" Text="{Binding DisplayValue, Mode=OneWay}"
               Style="{Binding TextBlockStyle}"
               TextWrapping="{Binding TextWrapping}"/>
</localizedString:LocalizedStringTextBlockBase>

