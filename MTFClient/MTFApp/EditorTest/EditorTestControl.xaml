                        <uiControl:TagListBox ItemSource="{Binding TagList}" Grid.Row="14" Grid.Column="1"  />
                        <ListBox ItemsSource="{Binding TagList}"  Grid.Row="14" Grid.Column="2">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </Grid>
                </Grid>
            </TabItem>
